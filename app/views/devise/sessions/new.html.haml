-# 仮置き　ログイン方法　ロボット確認付き


.exhibitcontent
  .exhibitcontent__header
    = render "products/show_header"
  .log__main
    .log__main__container
      .log__main__container__no
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", index_path, class:"log__main__container__no__btn"
      .log__main__container__sns
        = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'log__main__container__sns__facebook' do
          = icon 'fab', 'facebook-square', class:"log__main__container__sns__facebook__icon"
          Facebookでログイン
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'log__main__container__sns__google' do
          = icon 'fab', 'google', class:"log__main__container__sns__google__icon"
          Googleでログイン

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .log__main__container__form
          .log__main__container__form__inner
            .log__main__container__form__inner__blank
              = f.email_field :email, autofocus: true,class: "log__main__container__form__inner__blank__input",placeholder: "メールアドレス"
            .log__main__container__form__inner__blank
              = f.password_field :password, autocomplete: "off",class:"log__main__container__form__inner__blank__input",placeholder: "パスワード"
            .log__main__container__form__inner__robot
              .log__main__container__form__inner__robot__inside
                = flash[:recaptcha_error]
                = recaptcha_tags
            = f.submit "ログイン", class: 'log__main__container__form__inner__red'
              
  .exhibitcontent_down
    = render 'products/show_footer'
