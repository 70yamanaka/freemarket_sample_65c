-# 新規会員登録　３つの方法



.exhibitcontent
  .exhibitcontent__header
    = render "products/show_header"
  .cellphone__main
    %section.cellphone__main__container
      %h2 新規会員登録
      .cellphone__main__container__form
        .cellphone__main__container__form__inside
          = link_to root_path,class: 'cellphone__main__container__form__inside__btn' do
            = icon 'far', 'envelope', class:"cellphone__main__container__form__inside__btn__envelope"
            -# %fa.far.fa-envelope
            メールアドレスで登録する
          %button.cellphone__main__container__form__facebook
            = icon 'fab', 'facebook-square', class:"cellphone__main__container__form__facebook__icon"
            Facebookで登録する
          %button.cellphone__main__container__form__google
            = icon 'fab', 'google', class:"cellphone__main__container__form__google__icon"
            Googleで登録する
    

  .exhibitcontent_down
    = render 'products/show_footer'



