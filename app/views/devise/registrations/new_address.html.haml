.exhibitcontent
  .exhibitcontent__header
    .exhibitcontent__header--logo
      = link_to image_tag('fmarket_logo_red.svg',size:"185x49",class:"exhibitcontent_logo__image"), root_path
    %ul.exhibitcontent__header__right
      %li.exhibitcontent__header__right__red
        会員情報
        .exhibitcontent__header__right__red--line
      %li.exhibitcontent__header__right__red
        電話番号認証
        .exhibitcontent__header__right__red--line2
      %li.exhibitcontent__header__right__red
        お届け先住所入力
        .exhibitcontent__header__right__red--line3
      %li.exhibitcontent__header__right__4
        支払い方法
        .exhibitcontent__header__right__4--line4
      %li.exhibitcontent__header__right__5
        完了
        .exhibitcontent__header__right__5--line5

  .address_main
    .address_main--title
      住所入力
    
    .address_main__content
      = form_with model: @addresses,url: {controller: 'registrations', action: 'create_address' },class:"address_main__content__single", local: true do |f|
        .address_main__content__single__top
          .address_main__content__single__top--left
            郵便番号
          .address_main__content__single__top--right
            必須
        = f.text_field :post_code, placeholder: "例）123-4567", class: 'address_main__content__single--input'
     
        .address_main__content__single__top
          .address_main__content__single__top--left
            都道府県
          .address_main__content__single__top--right
            必須
        .address_main__content__single__pre
          %label
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name,{},{class:"address_main__content__single__pre--input"}
            = icon 'fa', 'chevron-down', class: "address_main__content__single__pre--icon"
     
        .address_main__content__single__top
          .address_main__content__single__top--left
            市区町村
          .address_main__content__single__top--right
            必須
        = f.text_field :city, placeholder: "例）横浜市緑区", class: 'address_main__content__single--input'
    
        .address_main__content__single__top
          .address_main__content__single__top--left
            番地
          .address_main__content__single__top--right
            必須
        = f.text_field :address, placeholder: "例）青山1-1-1", class: 'address_main__content__single--input'
     
        .address_main__content__single__top
          .address_main__content__single__top--left
            建物名
          .address_main__content__single__top--right2
            任意
        = f.text_field :build, placeholder: "例）ビル101", class: 'address_main__content__single--input'
       
        .address_main__content__single__top
          .address_main__content__single__top--left
            電話
          .address_main__content__single__top--right2
            任意
        = f.text_field :phone_number, placeholder: "例）09012345678", class: 'address_main__content__single--input'

        = f.submit "次へ進む", class: 'address_main__content__single--submit'

  .exhibitcontent_down
    = render 'products/show_footer'