-# 出品した商品の取引中の画面 
= render 'header'  # 全体のヘッダーの部分テンプレートの呼び出し
.u-main
  - breadcrumb :p_transaction
  = render "layouts/breadcrumbs"
  .u-container
    .container-center
      = render 'user_sidebar'  # ユーザマイページのヘッダーの部分テンプレートの呼び出し
      .u-products
        .pmain
          .pmain__top
            出品した商品
          .pmain__center
            = link_to "", class: "pmain__center--left3" do
              出品中
            = link_to "", class: "pmain__center--center3" do
              取引中
            = link_to "", class: "pmain__center--right3" do
              売却済み
          -if @products
            - @products.each do |product|
              .main__bottom
                = image_tag "logo_gray.svg", class: "main__bottom--img", size: "100x100"
                .main__bottom--text
                  取引中の商品がありません
          - else
            .main__bottom
              = image_tag "logo_gray.svg", class: "main__bottom--img", size: "100x100"
              .main__bottom--text
                取引中の商品がありません
        .product_foot
          = link_to "", class: "product_foot__left" do
            = icon('fas', 'angle-left', class: 'product_foot__left--text')
          = link_to "", class: "product_foot__right" do
            = icon('fas', 'angle-right', class: 'product_foot__right--icon')

= render 'banner'  # 全体のバナーの部分テンプレートの呼び出し

= render 'footer'  # 全体のフッターの部分テンプレートの呼び出し

= render 'camera_icon'  # 右下に出るカメラアイコンの部分テンプレートの呼び出し