= render 'header'  # 全体のヘッダーの部分テンプレートの呼び出し
.u-main
  - breadcrumb :user_change_address
  = render "layouts/breadcrumbs"
  .u-container
    .container-center
      = render 'user_sidebar' # ユーザマイページのヘッダーの部分テンプレートの呼び出し
      .contents
        .chapter-container
          .chapter-container__head
            発送元・お届け先住所変更
          .chapter-container__change
            .chapter-container__change__content
              .chapter-container__change__content__forms
                .chapter-container__change__content__form__question
                  お名前
                .chapter-container__change__content__form__require
                  必須
                %input{type: "text", placeholder: "例)山田", class: "chapter-container__change__content__form__answer", value: current_user.name_family}
                %input{type: "text", placeholder: "例)彩", class: "chapter-container__change__content__form__answer", value: current_user.name_last}
              .chapter-container__change__content__form
                .chapter-container__change__content__form__question
                  お名前カナ
                .chapter-container__change__content__form__require
                  必須
                %input{type: "text", placeholder: "例)ヤマダ", class: "chapter-container__change__content__form__answer", value: current_user.name_kana_f}
                %input{type: "text", placeholder: "例)アヤ", class: "chapter-container__change__content__form__answer", value: current_user.name_kana_l}
              .chapter-container__change__content__form
                .chapter-container__change__content__form__question
                  郵便番号
                .chapter-container__change__content__form__require
                  必須
                %input{type: "text", placeholder: "例)123-4567", class: "chapter-container__change__content__form__answer"}
